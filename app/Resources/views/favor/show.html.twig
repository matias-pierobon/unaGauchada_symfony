{% extends 'base.html.twig' %}

{% block body %}
    <h1>Favor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ favor.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ favor.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ favor.text }}</td>
            </tr>
            <tr>
                <th>Sysdate</th>
                <td>{% if favor.sysDate %}{{ favor.sysDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if favor.end %}{{ favor.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('favor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('favor_edit', { 'id': favor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
